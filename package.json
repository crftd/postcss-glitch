{
  "name": "postcss-glitch",
  "version": "3.2.1",
  "description": "PostCSS plugin for glitch effect",
  "main": "dist/index.js",
  "repository": "https://github.com/crftd/postcss-glitch.git",
  "author": "Crash <hex22a@gmail.com>",
  "license": "MIT",
  "keywords": [
    "css",
    "postcss",
    "postcss-plugin",
    "glitch",
    "effect",
    "animation"
  ],
  "scripts": {
    "start": "yarn build:ci",
    "check-types": "tsc",
    "cypress": "cypress open",
    "size": "NODE_ENV=production size-limit --why",
    "lint": "CI=true NODE_ENV=production size-limit && eslint ./src --ext .js,.jsx,.ts,.tsx",
    "test": "jest --ci --coverage --config=jest-config.json && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "jest": "jest --config=jest-config.json",
    "build:ci": "CI=true yarn build",
    "build:dev": "NODE_ENV=development webpack --mode=development",
    "build": "NODE_ENV=production webpack --mode=production",
    "deploy:major": "yarn version --major && git push --follow-tags",
    "deploy:minor": "yarn version --minor && git push --follow-tags",
    "deploy:patch": "yarn version --patch && git push --follow-tags"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "post-merge": "yarn outdated"
    }
  },
  "size-limit": [
    {
      "limit": "110 KB",
      "config": "./webpack.config.js",
      "path": "./dist/index.js"
    }
  ],
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "coveralls": "^3.0.5",
    "cypress": "^3.4.0",
    "cypress-image-snapshot": "^3.1.1",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "husky": "^3.0.0",
    "jest": "^24.1.0",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "size-limit": "^1.3.7",
    "ts-jest": "^24.0.0",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.35.3",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.6"
  },
  "browserslist": [
    "last 1 version",
    "> 1%"
  ],
  "dependencies": {
    "postcss": "^7.0.17"
  }
}
